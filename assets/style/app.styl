.content-wrapper {
  h2 {
    margin-bottom: 1rem;
  }
  table {
    // border-radius: 2px;
    // border-collapse: collapse;
    border-spacing: 0;
    // width: 100%;
    max-width: 100%;

    tr:not(:last-child) td{
      border-bottom: 1px solid rgba(0, 0, 0, 0.12);
    }
    tr td:not(:last-child),td:only-child{
      border-right: 1px solid rgba(0, 0, 0, 0.12);
    }
    tr{
      td{
        padding-right: 16px
      }
      td:only-child:not([rowspan]){
        padding-left: 16px;
        // padding-right: 16px;
      }
      td:not(:first-child) {
        padding-left: 16px;
        // padding-right: 16px;
      }
    }

    td, th {
      height: 36px;
    }
  }
}

